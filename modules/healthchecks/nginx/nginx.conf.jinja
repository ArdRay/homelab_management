# generated 2022-02-10, Mozilla Guideline v5.6, nginx 1.17.7, OpenSSL 1.1.1k, modern configuration
# https://ssl-config.mozilla.org/#server=nginx&version=1.17.7&config=modern&openssl=1.1.1k&guideline=5.6

events {
    worker_connections 2048;
}

http {
    server {
        listen 80;
	    server_name {{ pillar['healthchecks']['fqdn'] }};

        location / {
            return 301 https://$host$request_uri;
        }
    }

    server {
        listen 443 ssl;

	    server_name {{ pillar['healthchecks']['fqdn'] }};

        ssl_certificate /opt/ssl/{{ pillar['healthchecks']['fqdn'] }}.cer;
        ssl_certificate_key /opt/ssl/{{ pillar['healthchecks']['fqdn'] }}.key;
        ssl_session_timeout 1d;
        ssl_session_cache shared:MozSSL:10m;  # about 40000 sessions
        ssl_session_tickets off;

        # modern configuration
        ssl_protocols TLSv1.3;
        ssl_prefer_server_ciphers off;

        # HSTS (ngx_http_headers_module is required) (63072000 seconds)
        add_header Strict-Transport-Security "max-age=63072000" always;

        # OCSP stapling
        ssl_stapling on;
        ssl_stapling_verify on;

        # verify chain of trust of OCSP response using Root CA and Intermediate certs
        ssl_trusted_certificate /opt/ssl/ca.cer;

        location / {
            proxy_pass http://127.0.0.1:8000/;
            proxy_set_header X-Forwarded-For $remote_addr;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Host {{ pillar['healthchecks']['fqdn'] }};
            proxy_read_timeout 900;
            proxy_redirect off;
            proxy_http_version 1.1;
            proxy_buffering off;
            chunked_transfer_encoding off;
        }
    }
}